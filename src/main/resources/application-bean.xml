<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean name="mysql5DataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init"
          destroy-method="close">
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.user}"/>
        <property name="password" value="${db.passwd}"/>
        <property name="initialSize" value="3"/>
        <property name="minIdle" value="3"/>
        <property name="maxActive" value="200"/>
        <property name="maxWait" value="5000"/>
        <property name="timeBetweenEvictionRunsMillis" value="60000"/>
        <property name="minEvictableIdleTimeMillis" value="300000"/>
        <property name="validationQuery" value="select 1"/>
        <property name="testWhileIdle" value="true"/>
        <property name="testOnBorrow" value="false"/>
        <property name="testOnReturn" value="false"/>
        <property name="poolPreparedStatements" value="true"/>
        <property name="maxOpenPreparedStatements" value="100"/>
        <property name="asyncInit" value="false"/>
        <property name="filters" value="mergeStat"/>
    </bean>

    <bean name="mysql5Dialect" class="cn.devezhao.persist4j.dialect.MySQL5Dialect"/>

    <bean name="persistManagerFactory" class="cn.devezhao.persist4j.engine.PersistManagerFactoryImpl">
        <constructor-arg index="0" ref="mysql5DataSource"/>
        <constructor-arg index="1" ref="mysql5Dialect"/>
        <constructor-arg index="2">
            <bean class="com.rebuild.core.metadata.DynamicMetadataFactory">
                <constructor-arg index="0" value="metadata-conf.xml"/>
                <constructor-arg index="1" ref="mysql5Dialect"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean name="jedisPool" class="redis.clients.jedis.JedisPool" destroy-method="destroy">
        <constructor-arg index="0">
            <bean class="redis.clients.jedis.JedisPoolConfig"/>
        </constructor-arg>
        <constructor-arg index="1" value="${rebuild.CacheHost}"/>
        <constructor-arg index="2" value="${rebuild.CachePort}"/>
        <constructor-arg index="3" value="5000"/>
        <constructor-arg index="4" value="${rebuild.CachePassword}"/>
        <constructor-arg index="5" value="0"/>
    </bean>

    <bean name="ehcacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
        <property name="cacheManager">
            <bean class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean" destroy-method="destroy">
                <property name="configLocation" value="classpath:ehcache.xml"/>
            </bean>
        </property>
    </bean>

</beans>